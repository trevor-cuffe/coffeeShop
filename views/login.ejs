<%- include("partials/header.ejs") %>

<main class="container">

    <div class="authCard">
        <div class="imgDisplay"></div>
        <div class="formDisplay">
            <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" name="username" type="email" placeholder="Email" required autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control" name="password" type="password" placeholder="Password" minlength="8" required>
                </div>
                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>

</main>

