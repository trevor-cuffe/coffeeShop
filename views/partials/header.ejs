<!DOCTYPE html>
<html>

<head>

	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Dosis:wght@400;700&display=swap" rel="stylesheet">

	<!-- Boootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
		integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

	<!-- Font Awesome -->
	<script src="https://kit.fontawesome.com/76deebad12.js" crossorigin="anonymous"></script>

	<!-- Stylesheet CSS -->
	<link rel="stylesheet" type="text/css" href="/styles/main.css">


	<title>Cuffee Grounds</title>


</head>

<body>

	<nav class="navbar navbar-expand-lg navbar-dark bg-customDark">
		<div class="container">
			<a class="navbar-brand pr-2" href="/"><i class="fas fa-mug-hot"></i> Cuffee Grounds</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
				aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active px-1"><a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
					</li>
					<li class="nav-item px-1"><a class="nav-link" href="/menu">Menu</a></li>
					<li class="nav-item px-1"><a class="nav-link" href="#">Connect <i class="fas fa-user-friends"></i></a></li>
					<li class="nav-item px-1 mr-3"><a class="nav-link" href="#">About</a></li>
					<% if(currentUser) { %> 
						<li class="nav-item px-1"><a class="nav-link" href="/menu/new">Add Item</a></li>
					<% } %> 
					<!--       <li class="nav-item">
	        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
	      </li> -->
				</ul>
				<ul class="navbar-nav">
					<% if(!currentUser) { %> 
						<li class="nav-item px-1"><a class="nav-link" href="/login">Login <i class="fas fa-user"></i></a></li>
						<li class="nav-item px-1"><a class="nav-link" href="/register">Register <i class="fas fa-user-plus"></i></a></li>
					<% } else { %> 
						<li class="nav-item px-1"><a class="nav-link">Logged in: <%= currentUser.username %></a></li>
						<li class="nav-item px-1"><a class="nav-link" href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a></li>
					<% } %> 
				</ul>

				<!--     <form class="form-inline my-2 my-lg-0">
	      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
	      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
	    </form> -->
			</div> <!-- Nav-Collapse -->

		</div> <!-- Container -->

	</nav> <!-- Navbar -->

	<div class="container limitedDisplay">
		<% if(error_message && error_message.length > 0) { %> 
			<div class="alert alert-danger" role="alert">
				<%= error_message %> 
			</div>
		<% } %>
		<% if(success_message && success_message.length > 0) { %> 
			<div class="alert alert-success" role="alert">
				<%= success_message %> 
			</div>
		<% } %>
	</div>